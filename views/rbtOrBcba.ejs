<!doctype html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Ascend Data Tracker</title>
    <style>
        /* Inline critical CSS here */
        /* Example:
        body {
            margin: 0;
            padding: 0;
            font-family: Arial, sans-serif;
        }
        */
    </style>
</head>
<body>
    <section class="todohome">
        <%- include('navigation') %>
        <header>
            <h1>Required</h1>
        </header>
        <section>
            <h2>Please Fill Out </h2>
            <form action="/rbtOrBcba" method="post">
                <h3>Are you a BCBA?</h3>
                <div>
                    <input type="hidden" name="userData" value="<%= JSON.stringify(user) %>">
                    <label>
                        <input type="radio" name="role" value="bcba" required>
                        Yes
                    </label>
                    <label>
                        <input type="radio" name="role" value="rbt" required>
                        No
                    </label>
                </div>
                <h3>Enter your name:</h3>
                <input type="text" name="name" required>
                <button type="submit">Submit</button>
            </form>
        </section>
    </section>
    <footer class="info">
        <p>Created by John Harnois</a></p>
        <p>Part of <a href="https://ascendwithaba.com/">Ascend ABA </a></p>
    </footer>

    <!-- JavaScript to load non-critical CSS asynchronously -->
    <script>
        // Function to load CSS asynchronously
        function loadCSS(href) {
            var link = document.createElement('link');
            link.rel = 'stylesheet';
            link.href = href;
            document.head.appendChild(link);
        }

        // Defer loading of non-critical CSS files
        window.addEventListener('load', function() {
            loadCSS('/css/base.css');
            loadCSS('/css/index.css');
            loadCSS('/css/home.css');
            loadCSS('/css/split.css');
        });
    </script>
</body>
</html>
